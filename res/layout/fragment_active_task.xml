<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE" >

    <TextView
        android:id="@+id/posted_tasks_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/your_posted_tasks_list"
        android:layout_alignLeft="@+id/your_posted_tasks_list"
        android:text="POSTED TASKS:"
        android:textColor="#b9b9b9"
        android:textSize="26sp" />

    <ListView
        android:id="@+id/your_posted_tasks_list"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/accepted_tasks_list"
        android:layout_marginRight="18dp" >
    </ListView>

    <TextView
        android:id="@+id/accepted_tasks_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/posted_tasks_header"
        android:layout_alignBottom="@+id/posted_tasks_header"
        android:layout_alignLeft="@+id/accepted_tasks_list"
        android:text="ACCEPTED TASKS:"
        android:textColor="#b9b9b9"
        android:textSize="26sp" />

    <ListView
        android:id="@+id/accepted_tasks_list"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
		android:layout_marginTop="35dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/posted_tasks_header" >
    </ListView>

</RelativeLayout>
